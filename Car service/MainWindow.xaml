<Window x:Class="Car_service.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Style="{DynamicResource WindowStyle}"
        SizeChanged="WindowSizeChanged">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowStyle.xaml" />
    </Window.Resources>

    <DockPanel>
        <TabControl Template="{StaticResource TabControlItem}">
            <TabItem  Name="TabPage1" Header="TabPage1" Template="{StaticResource TabItemTemplate}"/>
            <TabItem Name="TabPage2" Header="TabPage2" Template="{StaticResource TabItemTemplate}"/>
            <TabItem Name="TabPage3" Header="TabPage3" Template="{StaticResource TabItemTemplate}"/>
            <TabItem Name="TabPage4" Header="TabPage4" Template="{StaticResource PhotoTabItemTemplate}">
                
            </TabItem>
        </TabControl>

    </DockPanel>
</Window>